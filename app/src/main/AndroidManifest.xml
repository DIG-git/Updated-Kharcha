<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dristi.kharcha">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_kharcha"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_kharcha"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity"></activity>
        <activity
            android:name=".SplashScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".About"
            android:label="About" />
        <activity
            android:name=".Payments"
            android:label="Payments" />
        <activity
            android:name=".Navigation_drawer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Lend_Borrow"
            android:label="Accounts" />
        <activity
            android:name=".Budgets"
            android:label="Budgets" />
        <activity
            android:name=".Budget_info"
            android:label="Budget Details" />

        <receiver android:name=".AlarmReceiver" />
    </application>

</manifest>